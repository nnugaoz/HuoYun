@using HuoYun.Domain.Concrete
@model T_User

@{
    ViewBag.Title = "Edit";
}

<h2>编辑车主信息</h2>
@using (Html.BeginForm("Edit", "Driver", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(e => e.ID);
    <div class="form-group">
        <label class="control-label col-md-2">注册手机号</label>
        <div class="col-md-2">
            @Html.TextBox("CellPhone", null, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    for (var i = 0; i < Model.T_Driver.Count; i++)
    {
        @Html.HiddenFor(e => e.T_Driver.ElementAt(i).ID, new { @Name = string.Format("T_Driver[{0}].ID", i) });
    @Html.HiddenFor(e => e.T_Driver.ElementAt(i).UID, new { @Name = string.Format("T_Driver[{0}].UID", i) });
    <div class="form-group">
        <label class="control-label col-md-2">姓名</label>
        <div class="col-md-2">
            @*@Html.TextBox("[" + i + "].Name", Model.T_Driver.ElementAt(i).Name, new { @class = "form-control" })*@
            @Html.TextBoxFor(e => e.T_Driver.ElementAt(i).Name, new { @class = "form-control", @Name = string.Format("T_Driver[{0}].Name", i) })
        </div>

        <label class="control-label col-md-2">微信号</label>
        <div class="col-md-2">
            @*@Html.TextBox("[" + i + "].Wx", Model.T_Driver.ElementAt(i).Wx, new { @class = "form-control" })*@
            @Html.TextBoxFor(e => e.T_Driver.ElementAt(i).Wx, new { @class = "form-control", @Name = string.Format("T_Driver[{0}].Wx", i) })
        </div>

