            <input name="CarImg" type="file" id="CarImg" style="display:none" />
            <img class="img-thumbnail" id="imgCarImg" style="width:100px;height:100px;" src="@Url.Action("GetImg", "Driver", new { p_FilePath = Model.T_Driver.ElementAt(i).CarImgPath })" />
        </div>
        <a href="#" onclick="javascript: void (0);">
            <label for="DRImg" class="control-label col-md-2" style="text-decoration:underline;cursor:pointer;">上传驾驶证照片</label>
        </a>
        <div class="col-md-2">
