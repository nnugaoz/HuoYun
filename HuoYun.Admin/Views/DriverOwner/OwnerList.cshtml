@using HuoYun.Domain.Concrete
@model IEnumerable<User>

@{
    ViewBag.Title = "OwnerList";
}

<h2>货主列表</h2>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                手机号码
            </th>
            <th>
                姓名
            </th>
            <th>
                公司名称
            </th>
            <th>
                公司详细地址
            </th>
            <th>
                认证状态
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lUser in Model)
        {
            <tr>
                <td>@lUser.CellPhone</td>
                @if (lUser.DriverOwners.Count > 0)
                {
                    foreach (var lOwner in lUser.DriverOwners)
                    {
                        <td>@lOwner.Name</td>
                        <td>@lOwner.ComName</td>
                        <td>@lOwner.ComAddr</td>
                        <td>@lOwner.Auth</td>
                        <td>@Html.ActionLink("编辑", "OwnerEdit", new { p_UserID = lUser.ID, p_DriverOwnerID = lOwner.ID })</td>
                    }
                }
                else
                {
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@Html.ActionLink("编辑", "OwnerEdit", new { p_UserID = lUser.ID, p_DriverOwnerID = "" })</td>
                }
            </tr>
        }
    </tbody>
</table>
