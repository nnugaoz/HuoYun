@using HuoYun.Admin.Models
@model UserNewViewModel

@{
    ViewBag.Title = "New";
}

<h3>创建新用户</h3>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label class="control-label">手机号码</label>
        @Html.TextBoxFor(e => e.CellPhone, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.CellPhone)
    </div>

    <div class="form-group">
        <label class="control-label">密码</label>
        @Html.PasswordFor(e => e.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Password)
    </div>

    <div class="form-group">
        <label class="control-label">确认密码</label>
        @Html.PasswordFor(e => e.PasswordConfirm, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.PasswordConfirm)
    </div>

    <div class="form-group">
        <label class="control-label">用户类型</label>
        @Html.TextBoxFor(e => e.Type, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Type)
    </div>

    <input type="submit" class="btn btn-primary" value="保存" />
}


