@using HuoYun.Domain.Concrete
@model User

@{
    ViewBag.Title = "Edit";
}

<h3>编辑用户</h3>
@using (Html.BeginForm())
{
    @Html.Hidden("ID",Model.ID);
    <div class="form-group">
        <label class="control-label">手机号码</label>
        @Html.TextBoxFor(e => e.CellPhone, new { @class = "form-control readonly"})
        @Html.ValidationMessageFor(e => e.CellPhone)
    </div>

    <div class="form-group">
        <label class="control-label">用户类型</label>
        <div class="radio">
            <label><input type="radio" name="Type" id="Type2" value="2" title="车主" checked="checked" />  车主</label>

            <label><input type="radio" name="Type" id="Type3" value="3" title="货主" /> 货主 </label>

            <label><input type="radio" name="Type" id="Type4" value="4" title="信息发布" />  信息发布</label>

            <label><input type="radio" name="Type" id="Type5" value="5" title="财务" /> 财务 </label>

            <label><input type="radio" name="Type" id="Type1" value="1" title="管理员" /> 管理员 </label>
        </div>
        @Html.ValidationMessageFor(e => e.Type)
    </div>

    <input type="submit" class="btn btn-primary" value="保存" />
}


